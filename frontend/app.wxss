/* 全局样式，例如设置页面的默认字体、颜色等 */
page {
  font-family: Arial, sans-serif;
  color: #333;
  background-color: #F5F5F5;
}

/* 公共的按钮样式 */
button {
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  color: white;
  margin: 10px 0;
}

/* 公共的输入框样式 */
input {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  width: 100%;
  box-sizing: border-box;
  margin: 5px 0;
}

/* 公共的视图容器样式 */
.view-container {
  padding: 20px;
}

/* 公共的标题样式 */
.section-header {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}