/* pages/auth/auth.wxss */
.auth-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 20px;
  box-sizing: border-box;
}

.time {
  font-size: 16px;
}

.back {
  width: 30px;
  height: 30px;
}

.logo {
  width: 220px;
  height: 150px;
  margin-bottom: 30px;
}

/* 按钮基础样式 */
.auth-btn {
  display: flex;
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  width: 80%;
  height: 90rpx;
  background-color: #39B366; /* 背景 */
  border-radius: 10rpx;
  border: none;
  color: white;
  font-size: 32rpx;
  padding: 0 30rpx;
}

/* 图标样式 */
.auth-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx; /* 图标与文字间距 */
}

.agreement {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.agreement checkbox {
  margin-right: 10px;
}

.guest-btn {
  width: 50%;
  height: 100rpx;
  padding: 5px;
  background-color: #4095E5;
  color: white;
  border: none;
  border-radius: 5px;
}