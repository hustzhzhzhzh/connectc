/* 导航栏 */
.nav-bar {
  display: flex;
  height: 88rpx;
  background: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.nav-item {
  flex: 1;
  text-align: center;
  line-height: 88rpx;
  color: #666;
  font-size: 30rpx;
  transition: all 0.3s;
}

.nav-item.active {
  color: #FFA500;
  font-size: 30rpx;
  font-weight: 500;
  position: relative;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 4rpx;
  background: #FFA500;
}
/* 页面容器样式 */
.container {
  padding: 24rpx;
  max-width: 680rpx;
  margin: 0 auto;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}



.header {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.post-list {
  height: calc(78vh - 100rpx);
}

.post-item {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.post-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.post-author, .post-time {
  font-size: 24rpx;
  color: #999;
}

.post-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.divider {
  height: 1rpx;
  background-color: #eee;
  margin-top: 20rpx;
}

.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-data-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.no-data-text {
  font-size: 28rpx;
  color: #999;
}
.custom-btn {
  width: 80px;
  height: 80px;
  border-radius: 30%;
  background-color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}

.custom-btn image {
  width: 70px;
  height: 70px;
}