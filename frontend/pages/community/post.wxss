.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f6f6f6;
}

.header {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.post-list {
  height: calc(100vh - 100rpx);
}

.post-item {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.post-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.post-author, .post-time {
  font-size: 24rpx;
  color: #999;
}

.post-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.divider {
  height: 1rpx;
  background-color: #eee;
  margin-top: 20rpx;
}

.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-data-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.no-data-text {
  font-size: 28rpx;
  color: #999;
}