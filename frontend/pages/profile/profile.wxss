
/* 用户信息区 */
.user-info {
  padding: 60rpx 40rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #f8f8f8, #ffffff);
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-right: 40rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 44rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.phone {
  font-size: 32rpx;
  color: #666;
}

/* 功能列表 */
.function-list {
  margin: 40rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04);
}

.list-item {
  padding: 40rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
}

.list-item:last-child {
  border-bottom: none;
}

.item-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 32rpx;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
  margin-left: auto;
}

/* 退出按钮 */
.logout {
  margin: 60rpx 40rpx;
  padding: 32rpx;
  text-align: center;
  background: #fff;
  border-radius: 24rpx;
  color: #e64340;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04);
}
